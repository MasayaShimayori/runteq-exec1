<div class="row mb-3", id="js-form-comment-file">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: [@board, @comment], controller: @comment,id: "js-form-comment", remote: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label t('comments.show.body') %>
      <%= f.text_area :body, class: "form-control mb-3", rows: 4, placeholder: "コメント" %>
      <%= f.hidden_field :board_id, value: @board.id %>
      <%= f.submit "投稿", class: "btn btn-primary", name: "commit" %>
    <% end %>
  </div>
</div>
