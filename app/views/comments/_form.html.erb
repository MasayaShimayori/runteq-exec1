<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: [@board, @comment], controller: @comment, local: true do |f| %>
      <%= f.label t('comments.show.body') %>
      <%= f.text_field :body, class: "form-control mb-3", rows: 4, placeholder: "コメント" %>
      <%= f.hidden_field :board_id, value: @board.id %>
      <%= f.submit "投稿", class: "btn btn-primary", name: "commit" %>
    <% end %>
  </div>
</div>
