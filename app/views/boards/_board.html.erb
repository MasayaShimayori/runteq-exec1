        <div class="col-sm-12 col-lg-4 mb-3">
          <div id="board-id-<%= board.id %>">
            <div class="card">
              <%= image_tag board.image.url, class: "card-img-top", size: "300x200" %>
              <div class="card-body">
                <h4 class="card-title">
                  <%= link_to "#{board.title}", board %>
                </h4>
                <div class='mr10 float-right'>
                  <% if current_user.own?(board) %>
                    <%= link_to board_path(board), id: "button-delete-#{board.id}",  method: 'delete', data: { confirm: '削除しますか?' } do %>
                      <%= icon 'fas', 'trash', class: 'pr-1' %>
                    <% end %>
                    <%= link_to edit_board_path(board), id: "button-edit-#{board.id}" do %>
                      <%= icon 'fa', 'pen' %>
                    <% end %>
                  <% end %>
                </div>
                <ul class="list-inline">
                  <li class="list-inline-item">
                    <%= icon 'far', 'user' %>
                    <%= board.user.decorate.full_name %>
                  </li>
                  <li class="list-inline-item">
                    <%= icon 'far', 'calender' %>
                    <%= l board.created_at, format: :long %>
                  </li>
                </ul>
                <p class="card-text"><%= board.body %></p>
              </div>
            </div>
          </div>
        </div>
