<% content_for(:title,'掲示板一覧') %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render 'search_form' %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @bookmark_boards.present? %>
          <%= render @bookmark_boards %>
        <% else %>
          <p><%= t('ブックマーク中の掲示板がありません') %></p>
        <% end %>
      </div>
      <%= paginate @bookmark_boards %>
    </div>
  </div>
</div>
