<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>掲示板作成</h1>
      <%= form_with(model: @board,class: "new_board", local: true) do |f| %>
    
        <div class="form-group">
          <%= f.label "タイトル" %>
          <%= f.text_field :title, class: "form-control", id: "board_title" %>
        </div>

        <div class="form-group">
          <%= f.label "本文" %>
          <%= f.text_field :body, class: "form-control", id: "board_body", rows: 10, style:"height: 200px" %>
        </div>

        <%= f.submit "作成", class: "btn btn-primary" %>

      <% end %>
