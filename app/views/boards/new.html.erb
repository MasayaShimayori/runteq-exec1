<% content_for(:title,'掲示板作成') %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>掲示板作成</h1>
      <% if @board.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @board.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with(model: @board, class: 'new_board', local: true) do |f| %>
    
        <div class="form-group">
          <%= f.label :title, name: 'タイトル' %>
          <%= f.text_field :title, class: "form-control", id: "board_title" %>
        </div>

        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_field :body, class: "form-control", id: "board_body", rows: 10 %>
        </div>

        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, class: "form-control", id: "board_image" %>
        </div>

        <div class="form-group">
          <% if @board.image.present? %>
            <%= image_tag @board.image.url(:thumb), id: "board_img_prev" %>
          <% else %>
            <%= image_tag "board_placeholder.png", id: "board_img_prev" %>
          <% end %>
        </div>

          <%= f.submit "登録する", class: "btn btn-primary" %>

      <% end %>
    </div>
  </div>
</div>
