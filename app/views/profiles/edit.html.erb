<% content_for(:title,t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h1> <%= t '.title' %></h1>
      
        <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
          

            <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
           </div>

          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: 'form-control' %>
           </div>

           <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: 'form-control' %>
           </div>

          <div class="form-group">
            <%= f.label :avatar_image %>
            <%= f.file_field :avatar_image, oncharge:'previewImage()', class: 'form-control mb-3', accept: 'image/*' %>
          <div class="form-group">
             <%= image_tag @user.avatar_image_url(:thumb), id: 'preview', class: "rounded-circle mr15" %>
           </div>
            
            <%= f.submit '更新する', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
